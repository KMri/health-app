<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="uk-container-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, {html: {class: "uk-form uk-form-stacked"}}) do |f| %>
      <fieldset data-uk-margin>
        <div class="uk-form-row uk-form-controls">
          <%= f.label :code, "UserName", {class: "uk-form-label"} %>
          <%= f.text_field :code %>
        </div>
        <div class="uk-form-row uk-form-controls">
          <%= f.label :email, {class: "uk-form-label"} %>
          <%= f.email_field :email %>
        </div>
        <div class="uk-form-row uk-form-controls">
          <%= f.label :password, {class: "uk-form-label"} %>
          <%= f.password_field :password %>
        </div>
        <div class="uk-form-row uk-form-controls">
          <%= f.label :password_confirmation, "Confirmation", {class: "uk-form-label"} %>
          <%= f.password_field :password_confirmation %>
        </div>
        <%= f.submit "Create my account", {class: "uk-button uk-button-primary"} %>
      </fieldset>
    <% end %>
  </div>
</div>